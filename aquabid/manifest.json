{
    "manifest_version": 2,
    "name": "aquabid",
    "version": "0.4.3",
    "update_url": "https://raw.githubusercontent.com/joseph-jja/chrome-content-scripts/master/aquabid/update.xml",

    "browser_action": {
        "default_icon": {
            "32": "aquabid_logo.png"
        }
    },
    
    "background": {
        "scripts": ["background.js"]
     },

    "content_scripts": [{
        "matches": ["http://www.aquabid.com/*", "https://www.aquabid.com/*"],
        "all_frames": true,
        "css": ["styles.css"],
        "js": ["aquabid.js"],
        "run_at": "document_end"
    }],

    "permissions": [
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "*://*.aquabid.com/*"
    ]
}
