{
    "manifest_version": 2,
    "name": "aquabid",
    "short_name": "aquabid",
    "description": "aquabid extension",
    "version": "0.2.0",
    "minimum_chrome_version": "59",
    "update_url": "https://raw.githubusercontent.com/joseph-jja/chrome-content-scripts/master/aquabid/update.xml",

    "browser_action": {
        "default_icon": {
            "32": "aquabid_logo.png"
        }
    },

    "content_scripts": [{
        "matches": ["http://www.aquabid.com/*"],
        "all_frames": true,
        "css": ["styles.css"],
        "js": ["aquabid.js"]
    }],

    "permissions": [
        "tabs"
    ]
}
