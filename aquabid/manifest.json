{
    "manifest_version": 3,
    "name": "aquabid",
    "version": "1.0.2",
    "update_url": "https://raw.githubusercontent.com/joseph-jja/chrome-content-scripts/master/aquabid/update.xml",

    "action": {
        "default_icon": {
            "32": "aquabid_logo.png"
        }
    },
    
    "background": {
        "service_worker": "background.js"
     },

    "content_scripts": [{
        "matches": ["https://aquabid.com/*", "https://www.aquabid.com/*"],
        "all_frames": true,
        "css": ["styles.css"],
        "js": ["aquabid.js"],
        "run_at": "document_end"
    }],

    "permissions": [
        "tabs"
    ],

    "host_permissions": [
        "*://*.aquabid.com/*"
    ]
}
